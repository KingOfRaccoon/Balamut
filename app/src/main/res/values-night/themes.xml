<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Balamut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
    <style name="mainButton_green">
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/but_margin_start</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/but_margin_end</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/teal_300</item>
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="mainButton_fio">
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/but_margin_start</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/but_margin_end</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/purple_800</item>
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:color">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alegreya_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>